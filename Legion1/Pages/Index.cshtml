@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Name</h1>
    <form method="post">
       
          
        <div class="text-center">
            <label asp-for="Address.Number"></label><br />
            <input asp-for="Address.Number" /><br />
            <strong> <span asp-validation-for="Address.Number" class="text-danger"></span> </strong>
            @if (Model.Address != null && ModelState.IsValid)
            {

                String result = "";
                if (Model.Address.Number % 3 == 0) result += "Fizz";
                if (Model.Address.Number % 5 == 0) result += "Buzz";
                if (result == String.Empty) result += "The number you entered is neither Fizz nor Buzz";

                 <span>@result</span>
                


            }


        </div>
        <p></p>
       
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Zatwierdź</button>
        </div>
    </form>

</div>
